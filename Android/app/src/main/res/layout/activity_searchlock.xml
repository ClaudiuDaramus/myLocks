<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchLock">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/back_repeat"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button9"
            android:layout_width="170dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/back_icon"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnONOFF"
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:layout_above="@+id/button9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="509dp"
            android:background="#00FFFFFF"
            android:drawableBottom="@drawable/bt_icon_s" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_alignTop="@+id/btnONOFF"
            android:layout_marginStart="121dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/btnONOFF"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/search_icon" />
    </RelativeLayout>

    <TextView
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search for new locks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="490dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="177dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>